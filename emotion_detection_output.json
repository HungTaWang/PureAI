{
  "openapi": "3.0.0",
  "info": {
    "title": "Emotion Detection API",
    "description": "API for validating and processing patient emotion labels",
    "version": "1.0.0"
  },
  "paths": {
    "/emotion-process": {
      "post": {
        "summary": "Validate and process emotion labels",
        "description": "Analyze patient emotion by validating consistency between the algorithm-generated numeric label and the human-provided numeric label, then determine mood status or report an error",
        "operationId": "processEmotionLabels",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "numericLabel",
                  "patientID",
                  "emotionLabelString",
                  "timestamp"
                ],
                "properties": {
                  "numericLabel": {
                    "type": "number",
                    "description": "Emotion label generated by the detection algorithm (1 = good mood, 0 = bad mood)",
                    "enum": [
                      0,
                      1
                    ],
                    "example": 1
                  },
                  "patientID": {
                    "type": "string",
                    "description": "Unique identifier for the patient",
                    "example": "patient01"
                  },
                  "emotionLabelString": {
                    "type": "number",
                    "description": "Human-provided emotion label code (1 = good mood, 0 = bad mood)",
                    "enum": [
                      0,
                      1
                    ],
                    "example": 1
                  },
                  "timestamp": {
                    "type": "number",
                    "description": "Unix timestamp of the reading",
                    "example": 1745690952
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success response with processed emotion result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "moodStatus": {
                      "type": "string",
                      "description": "Determined mood status",
                      "enum": [
                        "good",
                        "bad"
                      ],
                      "example": "good"
                    },
                    "description": {
                      "type": "string",
                      "description": "A description of the processing outcome",
                      "example": "Numeric labels match. Mood is good."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}